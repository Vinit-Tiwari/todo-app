<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0"> <!-- displays site properly based on user's device -->

  <link rel="stylesheet" href="./css/style.css">

  <title>Todo app</title>

  <!-- Feel free to remove these styles or customise in your own stylesheet 👍 -->
  
</head>
<body class="bg-dark">
  <span id="bg-image" class="bg dark"></span>

  <span class="content column">

    <span class="row layer1">
      <span>
        <p class="logo">TODO</p>
      </span>

      <span id=mode class="sun">
      </span>
    </span>

    <span class="layer layer2 layer23-dark">
      <form for="" class="row" style="gap: 2.5rem;" method="POST">
        <!-- <input type="text" name="demo" > -->
        <input required id="input" name="task" class="input input-dark" type="text" placeholder="Create a new todo..." autocomplete="off">
        <input required id="date" name="date" type="date" class="input input-dark">
        <input required id="time" name="tasktime" type="time" class="input input-dark">
        <span></span>
      </form>
    </span>

    <span class="layer layer3 layer23-dark">

      <span class="list">
          <% for(let i=0; i<data.length; i++) {%>
            <div>
            </div>
            <span>
              <label for="" class="row lord" style="gap: 2.5rem;">
                <span class="list row">
                  
                  <%= data[i].task %>
                  <span>
                    <%= data[i].date %>,
                    <%= data[i].tasktime %>
                  </span>
                </span>
                <a href="/delete/<%= data[i].task %>" class="delete"></a>
              </label>
            </span>
          <% } %>

        </table>
      </span>     
    </span>
  </span>
  
  <script src="./js/script.js"></script>
</body>
</html>